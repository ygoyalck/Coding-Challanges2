// Change in the given string itself. So no need to return or print anything
#include<bits/stdc++.h>
void replacePi(char input[]) {
if(strlen(input)==0)
  return;
replacePi(input+1);
if(input[0]=='p' && input[1]=='i')
{
   for(int i=strlen(input)+2;i>=2;i--)
     input[i]=input[i-2];
  input[0]='3';
  input[1]='.';
  input[2]='1';
  input[3]='4';
}
}


